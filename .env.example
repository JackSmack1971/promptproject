# Security Configuration
JWT_SECRET=your-256-bit-secret-key-here-minimum-32-characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/prompt_engineering_db
DATABASE_SSL=true
DATABASE_POOL_SIZE=20

# AI Provider Configuration
OPENAI_API_KEY=your-openai-api-key-here
HF_API_KEY=your-huggingface-api-key-here

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password-here
REDIS_DB=0

# Security Headers
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# Logging and Monitoring
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
SECURITY_LOG_PATH=./logs/security.log

# GDPR and Privacy
GDPR_MODE=true
DATA_RETENTION_DAYS=365
ENCRYPTION_KEY=your-256-bit-encryption-key-here

# Security Monitoring
SECURITY_ALERT_EMAIL=security@yourcompany.com
SECURITY_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Development Configuration
NODE_ENV=development
PORT=3000
DEBUG=false